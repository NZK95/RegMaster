                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Content="All cores" Name="AllCoresCheckBox" 
                                         VerticalContentAlignment="Center"
                                         Checked="AllCores_Checked" Padding="8,4"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Background="#1A1A1A " CornerRadius="8" Padding="16" 
                            BorderBrush="#30363D" BorderThickness="1" Margin="0,16,0,0">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Style="{StaticResource LabelStyle}" Text="Address"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition  Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="AddressTextBox" Text="0xE2 e.g." Foreground="#444444" Grid.Column="0" 
                                            GotFocus="AddressTextBox_GotFocus" 
                                            LostFocus="AddressTextBox_LostFocus"/>
                                    <TextBox x:Name="BinaryTextBox" Grid.Column="2" 
                                            Text="Binary" IsReadOnly="True"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Style="{StaticResource LabelStyle}" Text="Bit"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="BitTextBox" Foreground="#444444" Text="15 or 0 - 10" Grid.Column="0" 
                                            GotFocus="BitTextBox_GotFocus" 
                                            LostFocus="BitTextBox_LostFocus"/>
                                    <TextBox x:Name="HexTextBox" Grid.Column="2" 
                                            Text="Hex" IsReadOnly="True"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Style="{StaticResource LabelStyle}" Text="Value"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ValueTextBox" Foreground="#444444" Text="Hex value"  Grid.Column="0" 
                                            GotFocus="ValueTextBox_GotFocus" 
                                            LostFocus="ValueTextBox_LostFocus"/>
                                    <TextBox x:Name="DecimalTextBox" Grid.Column="2" 
                                            Text="Decimal" IsReadOnly="True"/>
                                </Grid>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="ReadButton" Grid.Column="0" Content="Read" 
                                       Click="ReadButton_Click" Height="36"/>
                                <Button x:Name="WriteButton" Grid.Column="2" Content="Write" 
                                       Click="WriteButton_Click" Height="36"/>
                                <Button x:Name="ResetButton" Grid.Column="4" Content="Reset" 
                                       Click="ResetButton_Click" Height="36" Background="#8B5A00" 
                                       BorderBrush="#C9A350"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Background="#1A1A1A " CornerRadius="8" Padding="16" 
                            BorderBrush="#30363D" BorderThickness="1" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource HeaderStyle}" Text="Registry EAX (32-bit)"/>

                            <Grid Name="EaxGrid" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
