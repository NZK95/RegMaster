                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="6" x:Name="TextBox_6" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_6_MouseDoubleClick"/>
