                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="13" x:Name="TextBox_13" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_13_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="14" x:Name="TextBox_14" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_14_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="15" x:Name="TextBox_15" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_15_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="16" x:Name="TextBox_16" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_16_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="17" x:Name="TextBox_17" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_17_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="18" x:Name="TextBox_18" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_18_MouseDoubleClick"/>
