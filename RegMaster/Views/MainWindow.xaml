                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="20" x:Name="TextBox_20" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_20_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="21" x:Name="TextBox_21" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_21_MouseDoubleClick"/>
