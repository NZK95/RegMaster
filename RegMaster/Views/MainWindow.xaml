                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="10" x:Name="TextBox_10" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_10_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="11" x:Name="TextBox_11" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_11_MouseDoubleClick"/>
