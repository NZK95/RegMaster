                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="23" x:Name="TextBox_23" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_23_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="24" x:Name="TextBox_24" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_24_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="25" x:Name="TextBox_25" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_25_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="26" x:Name="TextBox_26" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_26_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="27" x:Name="TextBox_27" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_27_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="28" x:Name="TextBox_28" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_28_MouseDoubleClick"/>
                                <TextBox TextAlignment="Center" Margin="1" IsReadOnly="True" Grid.Column="29" x:Name="TextBox_29" Text="0" Background="#1A1A1A" MouseDoubleClick="TextBox_29_MouseDoubleClick"/>
