                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="3" Background="#1A1A1A " CornerRadius="8" Padding="16" 
                            BorderBrush="#30363D" BorderThickness="1" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource HeaderStyle}" Text="Registry EDX (32-bit)"/>
                            <Grid Name="EdxGrid" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
